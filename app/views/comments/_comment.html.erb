<div id="<%= dom_id comment %>">
  <p>
    <strong>Text:</strong>
    <%= comment.text %>
  </p>

  <p>
    <strong>Likes:</strong>
    <%= comment.likes %>
  </p>

  <p>
    <strong>Dislikes:</strong>
    <%= comment.dislikes %>
  </p>

  <p>
    <strong>Taps:</strong>
    <%= comment.taps %>
  </p>

  <p>
    <strong>Author name:</strong>
    <%= comment.author_name %>
  </p>

  <p>
    <strong>Post:</strong>
    <%= comment.post_id %>
  </p>

  <p>
    <strong>User:</strong>
    <%= comment.user_id %>
  </p>

</div>
