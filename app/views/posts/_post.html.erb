<div id="<%= dom_id post %>">
  <h2>
    <%= link_to post.title, post_path(post) %>
  </h2>

  <p>
    <strong>Text:</strong>
    <%= post.text %>
  </p>

  <p>
    <strong>Author email:</strong>
    <%= post.user.email %>
  </p>

  <p>
    <strong>Likes:</strong>
    <%= post.likes %>
  </p>

  
  <p>
    <strong>Tags:</strong>
    <%= post.tags %>
  </p>

  <div>
    <% post.comments.each do |comment| %>
      <div>
        <%= render "posts/comment", comment: comment %>
      </div>
    <% end %>
  </div>

</div>
